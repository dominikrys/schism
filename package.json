{
  "name": "schism",
  "version": "1.0.0",
  "description": "WebAssembly Compiler in TypeScript",
  "main": "src/app.ts",
  "repository": "git@github.com:dominikrys/schism.git",
  "author": "Dominik Rys",
  "license": "MIT",
  "dependencies": {
    "@thi.ng/leb128": "^1.0.64",
    "@types/marked": "^4.0.1",
    "@types/node": "^16.4.13",
    "copy-to-clipboard": "^3.3.1",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "browserify": "^17.0.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "marked": "^4.0.8",
    "opener": "^1.5.2",
    "prettier": "^2.3.2",
    "serve": "^13.0.2",
    "ts-jest": "^27.0.4",
    "tsify": "^5.0.4",
    "uglify-js": "^3.14.1",
    "watchify": "^4.0.0",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "yarn run eslint . --max-warnings=0 --ignore-path .lintformatignore",
    "format-check": "yarn prettier . -c --ignore-path .lintformatignore",
    "format": "yarn prettier . -w --ignore-path .lintformatignore",
    "bundle": "browserify docs/index.ts -p tsify | uglifyjs > docs/bundle.js",
    "watch": "watchify docs/index.ts -p tsify -o docs/bundle.js --verbose --debug",
    "serve": "serve ./docs -p 8000",
    "start": "npm-run-all --parallel watch serve"
  }
}
